.Chat-whole__Chat-main__messages__message
  .Chat-whole__Chat-main__messages__message__detail
    .Chat-whole__Chat-main__messages__message__detail__detail-user
      = message.user.name
    .Chat-whole__Chat-main__messages__message__detail__detail-date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .Chat-whole__Chat-main__messages__message__text
    - if message.content.present?
      %p.Chat-whole__Chat-main__messages__message__text__content
        = message.content
    = image_tag message.image.url, class: 'Chat-whole__Chat-main__messages__message__text__image' if message.image.present?